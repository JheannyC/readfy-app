datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Book {
  id              Int     @id @default(autoincrement())
  title           String
  author          String
  publicationYear Int
  pages           Int
  statusId        Int
  status          Status  @relation(fields: [statusId], references: [id])
  rating          Int?
  imgURL          String?
  currentPage     Int?
  notes           String?
  isbn            String?

  genreId Int
  genre   Genre @relation(fields: [genreId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Genre {
  id           Int      @id @default(autoincrement())
  categoryName String   @unique
  books        Book[]
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

enum StatusEnum {
  Aberto
  Fechado
  Finalizado
}

model Status {
  id         Int        @id @default(autoincrement())
  statusName StatusEnum @unique
  books      Book[]
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
}